//LEFT MOTOR CW
 void motorL_CW()
 {
	 PORTB ^= (_BV(2));
 }
//RIGHT MOTOR CW
void motorR_CW()
 {
	 PORTB ^= (_BV(1));
 }
 
//LEFT MOTOR CCW
void motorL_CCW()
 {
	 
	 PORTB ^= (_BV(4) | _BV(2));
 }
//RIGHT MOTOR CCW 
void motorR_CCW()
 {
	 
	 PORTB ^= (_BV(3) | _BV(1));
 }
 
