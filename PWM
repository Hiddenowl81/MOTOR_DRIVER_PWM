//BRAKE
void motor_BRAKE()
{
	PORTB &= (~(_BV(1) | _BV(2)));
	PORTB ^= (_BV(3) | _BV(4));
	
	//PORTB &= (~(_BV(0) | _BV(2)));
	//PORTB ^= (_BV(1) | _BV(3));	
}

//FORWARDS
void motor_FWD()
{
	motor_BRAKE();
	_delay_ms(2000);
	
	motorL_CW();
	motorR_CW();
	//PORTB ^= (_BV(0) | _BV(1) | _BV(2) | _BV(3));
}

//BACKWARDS
void motor_BWD()
{	
	
	motor_BRAKE();
	_delay_ms(2000);
	
	motorR_CCW();
	motorL_CCW();
		
	//PORTB ^= (_BV(0) | _BV(2));
	//PORTB &= (~(_BV(1) | _BV(3)));
}

